<Window x:Class="WaiterProject.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WaiterProject"
        mc:Ignorable="d"
        Title="AdminWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="AddUserButton" Content="Button" HorizontalAlignment="Left" Margin="43,65,0,0" VerticalAlignment="Top" Click="AddUserButton_Click"/>
        <ListView x:Name="UserListAdmin" Margin="431,67,10,248">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Id" Width="20" DisplayMemberBinding="{Binding UserId}"/>
                    <GridViewColumn Header="Login" Width="100" DisplayMemberBinding="{Binding Login}"/>
                    <GridViewColumn Header="Password" Width="100" DisplayMemberBinding="{Binding Password}"/>
                    <GridViewColumn Header="Role" Width="100" DisplayMemberBinding="{Binding Role}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
